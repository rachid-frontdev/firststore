<%- include('parts/layout') %>
<%- include('parts/nav') %>
<h3 style="text-align:center" class="p-5">Login Account</h3>
<% if(validlogin) { %>
<% for(let error of validlogin) { %>
  <% for(let i=0;i<error.length;i+=1) {%>
    <p class="alert alert-danger">
      <%= error[i].msg %>
    </p>
<% }}} %>
<form class="shadow-sm mb-5 bg-body bg-primary rounded p-5 " id="login" action="/login" method="POST" >

  <label for="email">Your Email</label>
  <input type="email" name="email" id="email" placeholder="Your E-mail" class="text-input">
  <% for(let i=0;i<notCorrect.length;i+=1) { %>
    <% if(notCorrect[i]){ %>

    <p class="alert alert-warning">
      <%= notCorrect[i] %>
    </p>
    <%} %>
<% } %>
  <label for="pass">your password</label>
  <input type="password" name="password" id="pass" placeholder="Your Password" class=" text-input">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <input class="btn btn-danger" type="submit" value="Login">

</form>


<p>Don't have account? <a href="/signup">signup</a></p>

<%- include('parts/footer') %>
